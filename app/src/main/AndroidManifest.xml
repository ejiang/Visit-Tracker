<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.ejiang.visittracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.ejiang.visittracker.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.ejiang.visittracker.search.Search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.github.ejiang.visittracker.addvisit.AddVisitActivity"
            android:theme="@style/AppTheme.MyNoActionBar" />
        <activity android:name="io.github.ejiang.visittracker.browsevisits.BrowseVisits" />
    </application>

</manifest>